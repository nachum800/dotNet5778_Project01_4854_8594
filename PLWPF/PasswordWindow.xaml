<Window x:Class="PLWPF.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="300" Width="300">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="92*"/>
        </Grid.RowDefinitions>
        <Label Content="Please enter the password:" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" Margin="2"/>
        <PasswordBox x:Name="PasswordBox" Grid.ColumnSpan="2" Grid.Row="1" Margin="10,22,10,20"/>
        <Button x:Name="Back" Content="Back" Grid.Row="2" Click="Back_Click"/>
        <Button x:Name="OK"  Content="OK" Grid.Column="1" Grid.Row="2" Click="OK_Click" IsDefault="True"/>

    </Grid>
</Window>
